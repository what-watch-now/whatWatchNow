<a href="javascript:history.back()">Atras</a>

<div id="detail-img">
  <img src="{{movie.image}}" alt="{{movie.title}} poster">
</div>
<div id="Scene">
  <p>Escena: </p>
  <img src="{{movie.largeimage}}" alt="">
</div>

<div id="detail-all">
  <h2>Titulo: </h2>
  <p>{{movie.title}}</p>
  <h3>Nota IMBD: </h3>
  <p>{{movie.imdbrating}}</p>
  <h4>Año lanzamiento: </h4>
  <p>{{movie.released}}</p>
  <h4>Duración: </h4>
  <p>{{movie.runtime}}</p>
  <h4>Sinopsis:</h4>
  <p>{{movie.synopsis}}</p>
  <h4>Genero:</h4>
  <p>{{movie.genre}}</p>
</div>

{{#if user}}
<div id="svg-opinion">
  <a id="fav-button" href="/detail?netflix_id={{movie.netflixid}}">
    {{#if filmAdded}}
    <img id="favourite-img" src="/images/like-drawed.svg" alt="Favourite-drawed">
    {{else}}
    <img id="no-favourite-img" src="/images/like.svg" alt="Favourite">
    {{/if}}
  </a>
  <a id="black-button" href="/detail?netflix_id={{movie.netflixid}}">
    <img id="black-img" class="unshown" src="/images/poop-drawed.svg" alt="Blacklist-drawed">
    <img id="no-black-img" class="shown" src="/images/poop.svg" alt="Blacklist">
  </a>
  <a id="view-button" href="/detail?netflix_id={{movie.netflixid}}">
    <img id="view-img" class="unshown" src="/images/view-drawed.svg" alt="View-drawed">
    <img id="no-view-img" class="shown" src="/images/view.svg" alt="View">
  </a>
</div>
{{/if}}

